{
   "name": "graphql-ts",
   "version": "0.0.1",
   "description": "Chester Yang's project developed with TypeORM + GraphQL.",
   "private": true,
   "keywords": [],
   "author": "Chester Yang",
   "license": "MIT",
   "devDependencies": {
      "@gql2ts/types": "^1.9.0",
      "@types/bcryptjs": "^2.4.1",
      "@types/jest": "^23.3.2",
      "@types/node": "^10.9.4",
      "@types/uuid": "^3.4.4",
      "@types/ws": "^6.0.1",
      "@types/yup": "^0.24.9",
      "copyfiles": "^2.1.0",
      "gql2ts": "^1.9.0",
      "jest": "^23.6.0",
      "nodemon": "^1.18.4",
      "prettier": "^1.14.2",
      "ts-jest": "^23.1.4",
      "ts-node": "^7.0.1",
      "tslint-config-prettier": "^1.15.0",
      "typescript": "3.0.3"
   },
   "dependencies": {
      "@gql2ts/from-schema": "^1.9.0",
      "bcryptjs": "^2.4.3",
      "graphql": "^14.0.2",
      "graphql-import": "^0.7.0",
      "graphql-request": "^1.8.2",
      "graphql-tools": "^3.1.1",
      "graphql-yoga": "^1.16.2",
      "reflect-metadata": "^0.1.10",
      "sqlite3": "^4.0.2",
      "typeorm": "0.2.7",
      "yup": "^0.26.5"
   },
   "scripts": {
      "start": "node ./dist/index.js",
      "start-prd-local": "SET NODE_ENV=production&npm run start",
      "start-dev": "SET NODE_ENV=development&nodemon --exec ts-node src/index.ts",
      "build": "tsc&npm run copyschemas",
      "copyschemas": "copyfiles -u 1 src/**/*.graphql dist/",
      "gen-schema-types": "ts-node src/scripts/createTypes.ts",
      "test": "SET NODE_ENV=test&jest --detectOpenHandles --forceExit",
      "heroku-prebuild": "echo This runs before Heroku installs your dependencies.",
      "heroku-postbuild": "npm run build"
   },
   "jest": {
      "globalSetup": "./src/tests/setup_hook.js",
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   },
   "engines": {
    "node": "8.12.0",
    "npm": "6.4.1"
    },
   "eslintConfig": {
      "plugins": []
   }
}
